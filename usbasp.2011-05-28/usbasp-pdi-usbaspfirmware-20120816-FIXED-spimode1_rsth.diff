+#endif
+}
+
+void pdiDisableTimerClock()
+{
+pdiSetData1();
+#ifdef USE_IMPROVED_AVR_MCU
+    TCCR2A=(0<<COM2A1)|(0<<COM2A0)|(1<<WGM21)|(0<<WGM20);
+    TCCR2B=(0<<CS22)|(0<CS21)|(1<<CS20)|(0<<WGM22);
+#else
+    TCCR2=(0<<CS22)|(0<CS21)|(1<<CS20)|(0<<COM21)|(0<<COM20)|(1<<WGM21)|(0<<WGM20);
+#endif
