+	case EXIT_RESET_DISABLED:
+		DDRB |= (1<<3);
+		pdiSetClk0();
+		_delay_ms(1);
+		pdiSetClk1();
+		break;
+
+	case EXIT_RESET_ENABLED:
+		DDRB |= (1<<3);
+		pdiSetClk0();
+		break;
+	}
